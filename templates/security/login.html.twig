{% extends 'frontend/template.html.twig' %}
{% block title %} - Connexion{% endblock %}
{% block body %}
<section class="bg-connect d-flex justify-end align-end">
    <h1>Connexion</h1>
</section>
<section class="container-login">
    <img src="{{asset('img/img-conect.webp')}}" alt="image de gauche pour connexion" class="img-connect">
    <div>
        <h2>Connectez vous à Super Collect</h2>
        <form method="post" class="d-flex flex-column justify-center align-center">
            {% include "frontend/_partials/_alert_message.html.twig" %}
            {% if error %}
                <div class="alert alert-danger mb-1">Une erreur est survenue veuillez réessayer s'il vous plaît</div>
            {% endif %}
            <div class="group-form">
                <label for="inputEmail" class="mb-1 text-bold">Votre email :</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="p-05 w-15" autocomplete="email" required autofocus>
            </div>
            <div class="group-form">
                <label for="inputPassword" class="mb-1 text-bold">Votre mot de passe :</label>
                <input type="password" name="password" id="inputPassword" class="p-05 w-15" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-green pulse-button btn btn-green" type="submit">Connexion</button>
        </form>
    </div>
</section>
{% endblock %}