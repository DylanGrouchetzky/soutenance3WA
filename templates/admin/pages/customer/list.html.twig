{% extends "admin/template.html.twig" %}
{% block title %}- Utilisateurs{% endblock %}
{% block body %}
<main>
    {% include "admin/_partials/_block_alert.html.twig" %}
    <section class="hero-section">
        <h1>Gestion des Utilisateur</h1>
    </section>
    <section style="overflow-x:scroll">
        {% if users|length > 0 %}
            <table>
                <thead>
                    <tr>
                        <th class="fx-13">Nom</th>
                        <th class="fx-13" width="30%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="text-capitalize"><a href="">{{ user.email }}</a></td>
                            <td class="text-right">
                                <a href="{{path('admin_user_delete',{'idUser':user.id})}}" onclick="return confirm('Vous voulez vraiment supprimer cette utilisateur?')" class="btn btn-red"><i class="feather-trash-2"></i> <span class="d-responsive-none">Supprimer</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>aucun utilisateurs inscrit</p>
        {% endif %} 
    </section>
</main>
{% endblock %}